@{
    Layout = null; // This example assumes no layout for simplicity.
}

<!DOCTYPE html>
<html>
<head>
    <title>CheatChat - Log In</title>
    <link rel="stylesheet" href="~/css/LogIn.css">
    <script src="~/js/site.js"></script>
</head>
<body style="background-image: url(images/LogInBackground.jpg)">
    <div class="container">
        <img src="~/images/CheatChatLogo.png" alt="Logo" class="logo">
        @using (Html.BeginForm("logIn", "Home", FormMethod.Get))
        {
            <label for="email">Email:</label>
            <input type="text" id="email" name="email" required />
            <br />
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required />
            <br />
            <input type="submit" id="login" value="Log In" style="font-size: 20px" onclick="loading()" />
            @* <button type="submit" id="sign up" value="sign up" style="font-size: 20px" onclick="signUp()" /> *@
            <a asp-controller="Home" asp-action="RegisterSwitch" style="font-size: 20px">Register</a>
        }
    <label style="color:red; padding-top: 20px; text-align:center; visibility:hidden">Incorrect Email or password</label>
    <div class="lds-ellipsis" id="loading"><div></div><div></div><div></div><div></div><div></div></div>
    </div>
</body>
</html>