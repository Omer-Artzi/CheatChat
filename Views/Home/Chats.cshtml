@using CheatChat.Models
@model UserModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/CSS/Chats.css">
    <script src="~/js/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat.js"></script>
    <title>WhatsApp Chat</title>
</head>
<body>
    <div class="chat-container">
        <div class="chat-header">
            <h2>Chat with Friend</h2>
        </div>
        <div class="chat-messages" id="chat-messages">
            @*<ul id="chat-messages"></ul>*@
            <!-- Messages will go here -->
        </div>
        <div class="chat-input">
            <input  type="text" id="user" value="@Model.first_name" contenteditable="false" />
            <input type="text" id="message" placeholder="Type your message">
            @*<textarea placeholder="Type your message..." id="message"></textarea>*@
            <button class="chat-input button" onclick="sendMessage()">Send</button>
        </div>
    </div>
</body>
</html>
